{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "sourceMap": true,
    "removeComments": false,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
  },
  "include": [
    "index.ts",
    "src/**/*",
    "src/types",
  ],
  "exclude": ["node_modules", "__tests__"]
}
